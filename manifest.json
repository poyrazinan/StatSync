{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "StatSync",
    "author": "Poyraz",
    "version": "1.0.0",
    "minimum-overwolf-version": "0.280.0.0",
    "description": "Valorant stats to Kick chat + OBS (cookie encrypted)",
    "icon": "icon.png",
    "icon_gray": "icon.png",
    "window_icon": "icon.png"
  },
  "permissions": ["GameInfo", "FileSystem", "Extensions"],
  "data": {
    "game_targeting": { "type": "dedicated", "game_ids": [21640] },
    "game_events": [21640],
    "windows": {
      "background": { "file": "background.html", "is_background_page": true },
      "settings": {
        "file": "settings.html",
        "transparent": false,
        "resizable": true,
        "size": { "width": 420, "height": 360 }
      }
    },
    "hotkeys": {
      "open_settings": {
        "title": "Open Settings",
        "default": "Ctrl+Alt+K"
      }
    },
    "start_window": "background"
  }
}
